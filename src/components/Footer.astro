const today = new Date();
---

<footer>
	&copy; {today.getFullYear()} ContentCreationApps.com. Todos los derechos reservados.

	<div class="footer-links">
		<a href="/politica-de-privacidad">Política de Privacidad</a>
		<a href="/terminos-y-condiciones">Términos y Condiciones</a>
		<a href="/contacto">Contacto</a>
	</div>

	<div class="social-links">
		<a href="https://x.com/EL4400J" target="_blank" rel="noopener" aria-label="Sígueme en X (Twitter)">
			<img src="/xpng.png" alt="Logo X" width="24" height="24" />
		</a>
		<a href="https://github.com/JCARRILO" target="_blank" rel="noopener" aria-label="Mi GitHub">
			<img src="/githubpng.png" alt="Logo GitHub" width="24" height="24" />
		</a>
	</div>
</footer>

<style>
	footer {
		padding: 2em 1em 6em 1em;
		background: linear-gradient(var(--gray-gradient)) no-repeat;
		color: rgb(var(--gray));
		text-align: center;
	}
	.footer-links {
		display: flex;
		justify-content: center;
		gap: 2em;
		flex-wrap: wrap;
		margin-top: 1em;
	}
	.footer-links a {
		color: rgb(var(--gray));
		text-decoration: none;
		font-size: 0.9em;
	}
	.footer-links a:hover {
		text-decoration: underline;
	}
	.social-links {
		display: flex;
		justify-content: center;
		gap: 1em;
		margin-top: 1.5em;
	}
	.social-links a img {
		display: block;
		width: 24px;
		height: 24px;
	}
	.social-links a:hover {
		opacity: 0.8;
	}
</style>
